<div class="container">
  <div class="row">
    <div class="col-xs-12">
        <h1></h1><br>

        <div class="panel panel-success">
          <div class="panel-heading">
            <h4>Agenda de compromissos</h4>
          </div>

          <table class="table" style="width:100%">
            <tr>
              <th>Data</th>
              <th>Hor√°rio</th>
              <th>Cliente</th>
              <th>Email</th>
              <th>Terapia</th>
              <th>Valor</th>
              <th>Rating</th>
              <th>Status</th>
            </tr>

            <% @appointments.each do |appointment| %>
            <tr>
              <td><%= appointment.session_date.strftime("%d/%m/%y") %></td>
              <td><%= appointment.session_date.strftime("%R") %></td>
              <td><%= appointment.user.first.capitalize + " " + appointment.user.last.capitalize%></td>
              <td><%= appointment.user.email %></td>
              <td><%= appointment.category_selected.capitalize if appointment.category_selected %></td>
              <td>R$ <%= appointment.therapist.session_price %>,00</td>
              <td><%= appointment.rating %></td>
              <td><%= appointment.status %></td>

            </tr>
            <% end %>
          </table>

        </div>

    </div>
  </div>
</div>

