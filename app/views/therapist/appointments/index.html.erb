<div class="container">
  <div class="row">
    <div class="col-xs-12">
        <h1></h1><br>

        <div class="panel panel-success">
          <div class="panel-heading">
            <h4>Agenda de compromissos</h4>
          </div>

          <table class="table" style="width:100%">
            <tr>
              <th>Data</th>
              <th>Hora</th>
              <th>Cliente</th>
              <th>Email</th>
              <th>Terapia</th>
              <th>Valor</th>
              <th>Rating</th>
              <th>Status</th>
              <th></th>
            </tr>

            <% @appointments.each do |appointment| %>
            <tr>
              <td><%= appointment.session_date.strftime("%d/%m/%y") %></td>
              <td><%= appointment.session_date.strftime("%R") %></td>
              <td class="terapia"><%= appointment.user.first.capitalize + " " + appointment.user.last.capitalize%></td>
              <td><%= appointment.user.email %></td>
              <td class="terapia"><%= appointment.category_selected.capitalize if appointment.category_selected %></td>
              <td>R$ <%= appointment.therapist.session_price %>,00</td>

              <td>
                <% if appointment.rating %>
                    <% appointment.rating.times do %>
                     <i class="fas fa-star" style= "color:#F4D144"></i>
                    <% end %>

                <% else %>

                  <% if appointment.status == "Agendado" %>
                      <%= link_to "Solicitar", therapist_appointment_path(appointment), method: :patch, class: "btn btn-default" %>

                  <% end %>

                <% end %>
              </td>
              <td><%= appointment.status %></td>

              <td class="btn btn-xs">
                <% if appointment.status == "Agendado" %>
                  <%= link_to therapist_appointment_path(appointment), data: { confirm: "Tem certeza que quer cancelar esse agendamento?" }, method: :delete do |l| %>
                    <i class="fas fa-trash-alt"></i>

                  <% end %>
                <% end %>
              </td>

            </tr>
            <% end %>
          </table>

        </div>

    </div>
  </div>
</div>

