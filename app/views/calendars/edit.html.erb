<% bg_image = image_path('calendar_edit.jpg') %>

<div class="banner-registration" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= bg_image %>');">

  <div class="container">
    <div class="row">
      <div class="col-xs-12">

        <br>
        <h2>Hor√°rios de atendimento</h2>

        <%= simple_form_for [@therapist, @calendar], input_html: { class: "btn btn-default"} do |f| %>
<div class="container-settings">

          <div class="container-settings-item">
            <%= f.input :mon, label: "Seg", collection: (6..23).map{|i| "#{i}:00" }, as: :check_boxes, include_hidden: false, checked: @calendar.mon.split(',').map{|i| "#{i}:00" } %>
          </div>

          <div class="container-settings-item">
            <%= f.input :tue, label: "Ter", collection: (6..23).map{|i| "#{i}:00" }, as: :check_boxes, include_hidden: false, checked: @calendar.tue.split(',').map{|i| "#{i}:00" } %>
          </div>

          <div class="container-settings-item">
            <%= f.input :wed, label: "Qua", collection: (6..23).map{|i| "#{i}:00" }, as: :check_boxes, include_hidden: false, checked: @calendar.wed.split(',').map{|i| "#{i}:00" } %>
          </div>

          <div class="container-settings-item">
            <%= f.input :thu, label: "Qui", collection: (6..23).map{|i| "#{i}:00" }, as: :check_boxes, include_hidden: false, checked: @calendar.thu.split(',').map{|i| "#{i}:00" } %>
          </div>

          <div class="container-settings-item">
            <%= f.input :fri, label: "Sex", collection: (6..23).map{|i| "#{i}:00" }, as: :check_boxes, include_hidden: false, checked: @calendar.fri.split(',').map{|i| "#{i}:00" } %>
          </div>

          <div class="container-settings-item">
            <%= f.input :sat, label: "Sab", collection: (6..23).map{|i| "#{i}:00" }, as: :check_boxes, include_hidden: false, checked: @calendar.sat.split(',').map{|i| "#{i}:00" } %>
          </div>

          <div class="container-settings-item">
            <%= f.input :sun, label: "Dom", collection: (6..23).map{|i| "#{i}:00" }, as: :check_boxes, include_hidden: false, checked: @calendar.sun.split(',').map{|i| "#{i}:00" } %>
          </div>


</div>
            <%= f.button :submit, "Alterar disponibilidade", class: "btn btn-success btn-block" %>
        <% end %>

        <br><br>
      </div>
    </div>
  </div>

</div>
