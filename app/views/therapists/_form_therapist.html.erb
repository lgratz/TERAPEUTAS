<%= simple_form_for(@therapist) do |f| %>
  <div class="form-inputs">
    <%= f.input :address, label: "Endereço", required: true %>

    <%= f.input :phone, label: "Telefone para contato", required: true %>

    <%= f.input :self_description, label: "Breve descrição sobre você", required: true %>

    <%= f.association :categories, label: "Terapias oferecidas", input_html: { class: "registration-associations" }, required: true, as: :check_boxes %>

    <%= f.input :session_price, label: "Preço por sessão", required: true %>

    <%= f.input :photos, label: "Foto do seu espaço" %>

    <%= f.input :photos_cache, as: :hidden %>

  </div>

  <div class="form-actions">
    <%= f.button :submit, "Cadastrar", class: "btn btn-success" %>
  </div>
<% end %>
