<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('assets/home-banner');">
  <div class="banner-content">
    <h1>Encontre a terapia que seu corpo precisa</h1>
    <%= link_to "Tratamento agora", therapists_path, class: "btn btn-primary btn-lg" %>
  </div>
</div>

<h2 class="text-center">Tratamentos em destaque</h2>

  <div class="container">
    <div class="row">
      <% Category.first(3).each do |category| %>
        <%= link_to 'categories' do %>
          <div class="col-xs-12 col-sm-4">
            <div class="card img-responsive" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= image_path category.image%>);" >
              <div class="card-category"></div>
              <div class="card-description">
                <h2 class="text-center"> <%= category.name  %></h2>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>

