<% bg_image = image_path('signup2.jpg') %>

<div class="banner-registration" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= bg_image %>');">

  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-md-7 col-md-offset-3 ">

          <br>
          <h2>Crie um novo hábito na sua vida</h2>

          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= f.error_notification %>

            <div class="form-inputs">

              <%= f.input :first, label: "Nome",
                          required: true,
                          autofocus: true ,
                          input_html: { autocomplete: "first" }%>

              <%= f.input :last, label: "Sobrenome",
                          required: true,
                          autofocus: true ,
                          input_html: { autocomplete: "last" }%>

              <%= f.input :email,
                          required: true,
                          autofocus: true ,
                          input_html: { autocomplete: "email" }%>

              <%= f.input :password, label: "Senha",
                          required: true,
                          placeholder: ("mínimo de #{@minimum_password_length} caracteres" if @minimum_password_length),
                          input_html: { autocomplete: "new-password" } %>

              <%= f.input :password_confirmation, label: "Confirme a senha",
                          required: true,
                          input_html: { autocomplete: "new-password" } %>

              <%= f.input :avatar %>

              <%= f.input :avatar_cache, as: :hidden %>

              <%= f.button :submit, "Cadastrar", class: "btn btn-success btn-block", width: 100 %>
            </div>

          <% end %>

          <br>
          <%= render "devise/shared/links" %>

      </div>
    </div>
  </div>

</div>
