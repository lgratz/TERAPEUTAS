<% bg_image = image_path('signin3.jpg') %>

<div class="banner-registration" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= bg_image %>');">

  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-md-6 col-md-offset-3">

          <br>
          <h2>Entre com seu usuário</h2>

          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs">
              <%= f.input :email, label: "Email",
                          required: true,
                          autofocus: true,
                          input_html: { autocomplete: "email" } %>

              <%= f.input :password, label: "Senha",
                          required: true,
                          input_html: { autocomplete: "current-password" } %>

              <%= f.input :remember_me, label: " Lembrar meu usuário", as: :boolean if devise_mapping.rememberable? %>
            </div>

            <div class="form-actions">
              <%= f.button :submit, "Entrar", class: "btn btn-success" %>
            </div>
          <% end %>

          <br>
          <%= render "devise/shared/links" %>

      </div>
    </div>
  </div>

</div>
