<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "weal_logo.png" %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right">

    <% if user_signed_in? %>

      <!-- Links when logged in -->
      <%= link_to raw("<i class='far fa-calendar-alt'></i><br> Agendamentos"), current_user.therapist.nil? ? appointments_path : therapist/appointments_path, class: "navbar-wagon-item navbar-wagon-link text-center" %>
      <%= link_to raw("<i class='fas fa-book'></i><br> Conheça Mais"), categories_path, class: "navbar-wagon-item navbar-wagon-link text-center" %>

      <!-- Avatar with dropdown menu -->
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <%= image_tag "http://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to edit_user_registration_path do %>
                <i class="fas fa-user"></i> <%= "Meu usuário" %>
              <% end %>
            </li>
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-cog"></i>  <%= t(".settings", default: "Settings") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>
      <%= link_to raw("<i class='fas fa-user'></i><br> Sou Eu"), root_path, class: "navbar-wagon-item navbar-wagon-link text-center" %>

      <%= link_to raw("<i class='fa fa-hand-paper'></i><br> Sou Terapeuta"), pages_path, class: "navbar-wagon-item navbar-wagon-link text-center" %>

      <%= link_to raw("<i class='fas fa-book'></i><br> Conheça Mais"), categories_path, class: "navbar-wagon-item navbar-wagon-link text-center" %>

      <!-- Login link (when logged out) -->
      <%= link_to raw("<i class='fas fa-sign-in-alt'></i><br> Entrar"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link text-center" %>

    <% end %>
  </div>

</div>

